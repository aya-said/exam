 pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/aya-said/exam.git', branch: 'main'
            }
        }
        stage('Install Node Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Tests') {
            steps {
                sh 'npm test'
            }
        }
        stage('Build Docker') {
            steps {
                sh 'docker build -t todo-app .'
            }
        }
    }
}

